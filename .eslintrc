{
  "root": true,
  "extends": "eslint-config-airbnb-es5",
  "env": {
    "node": true,
    "mocha": true,
    "browser": true
  },
  "rules": {
    "max-depth": [2, 80],
   "import/no-unresolved": 0,
    "one-var": 0,
    "one-var-declaration-per-line": 0,
    "new-cap": 0,
    "consistent-return": 0,
    "no-param-reassign": 0,
    "comma-dangle": 0,
    "curly": [1, "multi-line"],
    "no-multi-spaces": [2, {"exceptions": {"ImportDeclaration": true}}],
    "no-shadow": [1, { "allow": ["req", "res", "err"] }]
  }
}